<h1>Listing countdowns</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Countdown date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @countdowns.each do |countdown| %>
  <tr>
    <td><%= countdown.name %></td>
    <td><%= countdown.description %></td>
    <td><%= countdown.countdown_date %></td>
    <td><%= link_to 'Show', countdown %></td>
    <td><%= link_to 'Edit', edit_countdown_path(countdown) %></td>
    <td><%= link_to 'Destroy', countdown, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

